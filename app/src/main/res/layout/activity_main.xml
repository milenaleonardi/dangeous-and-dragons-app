<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Escolha da Raça -->
        <TextView
            android:id="@+id/label_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your race:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_race"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/race_prompt"/>

        <!-- Escolha da Classe -->
        <TextView
            android:id="@+id/label_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your class:"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/class_prompt"/>

        <!-- Atributos -->
        <TextView
            android:id="@+id/label_attributes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distribute your points (27 max)"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <!-- Força -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_decrease_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_strength_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <!-- Destreza -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_decrease_dexterity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_dexterity_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_dexterity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <!-- Constituição -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_decrease_constitution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_constitution_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_constitution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <!-- Inteligência -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_decrease_intelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_intelligence_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_intelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <!-- Sabedoria -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_decrease_wisdom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_wisdom_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_wisdom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <!-- Carisma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/button_decrease_charisma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/text_charisma_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"/>

            <Button
                android:id="@+id/button_increase_charisma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_points_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points left: 27"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
